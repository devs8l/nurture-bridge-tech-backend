# ============================================================================
# INQUANTIC FOUNDRY - ENVIRONMENT CONFIGURATION
# Copy this file to .env and modify values for your environment.
# NEVER commit the actual .env file to version control.
# ============================================================================

# --- Application ---
APP_NAME="InQuantic Microservice"
ENVIRONMENT=development
DEBUG=True
HOST=0.0.0.0
PORT=8000
WORKERS=4

# --- Security ---
# Generate strong keys for production: openssl rand -hex 32
SECRET_KEY=CHANGE-ME-IN-PRODUCTION-USE-STRONG-KEY
JWT_SECRET_KEY=CHANGE-ME-IN-PRODUCTION
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# --- Rate Limiting ---
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# --- CORS & Hosts ---
# Comma-separated lists
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# --- Database (PostgreSQL) ---
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/dbname
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_ECHO=False

# --- Redis ---
REDIS_URL=redis://localhost:6379/0
REDIS_TLS_ENABLED=False
CACHE_TTL=300

# --- Celery ---
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# --- Logging ---
LOG_LEVEL=INFO
LOG_FORMAT=json
AUDIT_LOG_ENABLED=True
AUDIT_LOG_FILE=logs/audit.log

# --- Observability ---
OTEL_ENABLED=True
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=inquantic-service
# Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# --- Compliance & Privacy ---
PII_DETECTION_ENABLED=True
PII_MASK_LOGS=True
PHI_ENCRYPTION_ENABLED=True
HSTS_ENABLED=True
HSTS_MAX_AGE=31536000
CSP_ENABLED=True

# --- SMTP Email ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=True
SMTP_USE_SSL=False
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=InQuantic Service
SMTP_TIMEOUT=30

# --- Feature Flags ---
FEATURE_NEW_UI=False
FEATURE_BETA_API=False
